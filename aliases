alias de="docker exec -it"
alias ds="docker_shell"
alias dr="docker_run"
alias dp="docker ps"
alias dl="docker container list --all"

alias tarc="tar_compress"
alias tarx="tar_decompress"

function docker_shell() {
  last_id=$(docker container ls -lq)
  docker exec -it $last_id /bin/bash
}

function docker_run() {
  docker run -it --rm $(docker images | awk '{print $3}' | awk 'NR==2') /bin/zsh
}

function tar_compress() {
  tar -cvzf $1.tar.gz $1
}

function tar_decompress() {
  tar -xvzf $1
}
